<IndexScreen>:
    BoxLayout:
        id: index_page
        orientation: "vertical"  # 在这里设置 orientation
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'static/proj_img/background.jpg'
        CarouselWidget:   # 先添加轮播图
            size_hint: 1, .3
            padding: 10, 15, 10, 5
            spacing: 10
            pos_hint: {"center_x": 0.5, "top":0}  # 使用 'top' 确保它在顶部
        #CameraModule:
        #    size_hint: 1, .2
        #    padding: 10, 15, 10, 5
        #    spacing: 10
        #    #pos_hint: {"center_x": 0.5}  # 使用 'top' 确保它在顶部
        BoxLayout:
            id: bottom_w
            orientation: "horizontal"  # 在这里设置 orientation
            size_hint: 1, .5
            padding: 5, 5, 10, 5
            spacing: 10
            TableData:
                id: table_data
                size_hint: .5, 1  # 可以根据需要调整大小
                padding: 10, 15, 10, 5  # 设置与其他小部件一致的内边距
                spacing: 10  # 设置间距
                canvas.before:
                    RoundedRectangle:
                        size: self.width//2.3, self.height
                        pos: self.x+5, self.y
                        source: 'static/proj_img/background_table.jpg'
                        radius: [20,]
                RecycleView:
                    viewclass: 'Label'
                    data: [{'text': str(i)} for i in table_data.data_items]
                    RecycleGridLayout:
                        cols: 2
